            <ul class="list-reset lg:flex justify-end flex-1 items-center">
                <li class="mr-3">
                    <a class="inline-block py-2 px-4 text-red-600 no-underline hover:text-gray-200 hover:text-underline" asp-controller="Main" asp-action="Index">Home</a>
                </li>
                <li class="mr-3 ">
                    <a class="inline-block text-red-600 no-underline  hover:text-gray-200 hover:text-underline py-2 px-4" asp-controller="Movie" asp-action="MainMovies">Films</a>
