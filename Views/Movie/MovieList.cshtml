@{
    Layout = "~/Views/Manager/_Layout.cshtml";
}
@model Movie;
<div class=" w-full">
    <div class="flex flex-col items-center justify-center">
        <p class="text-2xl text-center font-bold m-5">Movies</p>
        <table class="rounded-t-lg m-5 w-5/6 mx-auto bg-gray-200 text-gray-800">
            <tr class="text-left border-b-2 border-gray-300">
                <th class="px-4 py-3">Title</th>
                <th class="px-4 py-3">Genre</th>
                <th class="px-4 py-3">Category</th>
                <th class="px-4 py-3">Duration</th>
                <th class="px-4 py-3">Year</th>
                <th class="px-4 py-3">Country</th>
                <th class="px-4 py-3">Synopsis</th>
                <th class="px-4 py-3">Action</th>
            </tr>
            <tbody>
            @{
                if (ViewBag.MoviesCount != 0)
                {
                    foreach (var item in ViewBag.Movies)
                    {
                        <tr class="bg-gray-100 border-b border-gray-200">
                            <th class="px-4 py-3">@item.Title</th>
                            <th class="px-4 py-3">@item.Genre</th>
                            <th class="px-4 py-3">@item.Category</th>
                            <th class="px-4 py-3">@item.Duration min.</th>
                            <th class="px-4 py-3">@item.Year</th>
                            <th class="px-4 py-3">@item.Country</th>
                            <th class="px-4 py-3">
                                <button data-modal="@item.MovieId" class="modal-trigger bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                    See
                                </button>
                            </th>
                            <div id="@item.MovieId" class="modal-wrapper">
                                <div class="overlay close-modal"></div>
                                <div class="modal modal-centered">
                                    <div class="modal-content shadow-lg p-5">
                                        <div class="border-b p-2 pb-3 pt-0 mb-4">
                                            <div class="flex justify-between items-center">
                                                Synopsis
                                            </div>
                                        </div>
                                        <p>
                                            @item.Synopsis
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <th class="px-4 py-3">
                                <div class="inline-flex">
                                    <button class="bg-gray-200 hover:bg-green-500 text-black-dark font-bold py-2 px-4 rounded-l">
                                        Edit
                                    </button>
                                    <button class="bg-gray-200 hover:bg-red-500 text-black-dark font-bold py-2 px-4 rounded-r">
                                        Del
                                    </button>
                                </div>
                            </th>
                        </tr>
                    }
                }
                else
                {
                    <th class="px-4 py-3">No elements to show</th>
                }
            }
            </tbody>
        </table>
        <button data-modal="formFilm" class="modal-trigger bg-red-500 hover:bg-red-200 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-500 rounded">Add Movie</button>
        <div id="formFilm" class="modal-wrapper">
            <div class="overlay close-modal"></div>
            <div class="modal modal-centered">
                <div class="modal-content shadow-lg p-5">
                    <div class="border-b p-2 pb-3 pt-0 mb-4">
                        <div class="flex justify-between items-center">
                            Add Movie
                        </div>
                    </div>
                    <!-- Modal content -->
                    <form method="post" id="form_id" class="w-full" asp-controller="Movie" asp-action="Create">
                        <div class="form-group row">
                            <div class="col-10">
                                <input class="form-control" placeholder="Title" type="text" asp-for="Title">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <input class="form-control" placeholder="Category" type="text" asp-for="Category">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <input class="form-control" placeholder="Genre" type="text" asp-for="Genre">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <input class="form-control" type="text" placeholder="Synopsis" asp-for="Synopsis">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <input class="form-control" type="text" placeholder="Country" asp-for="Country">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <label>Duration</label>
                                <input class="form-control" type="number" placeholder="Duration" asp-for="Duration">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-10">
                                <label>Year</label>
                                <input class="form-control" type="number" value="2021" placeholder="Year" asp-for="Year">
                            </div>
                        </div>
                        <div class="mt-5">
                            <input type="submit" class="bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded" value="Create"/>
                            <span class="close-modal cursor-pointer bg-red-200 hover:bg-red-500 text-red-900 font-bold py-2 px-4 rounded">
                                Close
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>