@{
    Layout = "~/Views/Manager/_Layout.cshtml";
}
<br>
<div class="card bg-dark" style="opacity: 80%; color: white">
    <div class="row" style="margin: 10px">
        <div class="col-6">
            <div class="card-header">Statistics</div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="example-time-input" class="col-form-label">Search Criteria</label>
                    <select id="criterion" class="form-select form-control" aria-label="Default select example">
                        <option value="day">By Day</option>
                        <option value="month">By Month</option>
                        <option value="year">By Year</option>
                        <option value="genre">By Genre</option>
                        <option value="category">By Category</option>
                        <option value="film">By Film</option>
                        <option value="rating">By Rating</option>
                    </select>
                    <!--<span asp-validation-for="CinemaId"></span>-->
                </div>
                <div class="col-4">
                    <label for="example-time-input" class="col-form-label">Value</label>
                    <input class="form-control" type="text">
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <ul>
                        @{
                            foreach (var cri in @Html.Id("criterion"))
                            {
                                <li type="disc" style="color: dimgray; margin-left: 10px">hola</li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card-header">Films to show</div>
            <div class="form-group row">
                <div class="col-4">
                    <label for="example-time-input" class="col-form-label">Search Criteria</label>
                    <select id="criterion" class="form-select form-control" aria-label="Default select example">
                        <option value="viewed">Most viewed movies</option>
                        <option value="liked">Most liked movies</option>
                        <option value="economic">Economic gain</option>
                        <option value="promotion">Promotion</option>
                        <option value="random">Random</option>
                    </select>
                    <br>
                    <input type="submit" value="Select" class="bg-blue-500 hover:bg-blue-200 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-500 rounded">
                </div>
            </div>
        </div>
    </div>
</div>
