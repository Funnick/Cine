<div class=" w-full">
    <div class="flex flex-col items-center justify-center">
        <p class="text-2xl text-center font-bold m-5">Entradas</p>
        <table class="rounded-t-lg m-5 w-5/6 mx-auto bg-gray-200 text-gray-800">
            <tr class="text-left border-b-2 border-gray-300">
            <tr>
                <th class="px-4 py-3">Precio</th>
                <th class="px-4 py-3">Promoción</th>
                <th class="px-4 py-3">Función</th>
                <th class="px-4 py-3">Usuario</th>
                <th class="px-4 py-3">Acción</th>
            </tr>
            <tbody>
            @foreach (var item in Model.Result)
            {
                <tr class="bg-gray-100 border-b border-gray-200">
                    <th class="px-4 py-3">@item.Price</th>
                    <th class="px-4 py-3">@item.Promotion</th>
                    <th class="px-4 py-3">@item.Show</th>
                    <th class="px-4 py-3">@item.User</th>
                    <th class="px-4 py-3">
                        <div class="inline-flex">
                            <button class="bg-gray-200 hover:bg-green-500 text-black-dark font-bold py-2 px-4 rounded-l">
                                Edit
                            </button>
                            <button class="bg-gray-200 hover:bg-red-500 text-black-dark font-bold py-2 px-4 rounded-r">
                                Elim
                            </button>
                        </div>
                    </th>
                </tr>
            }
            </tbody>
        </table>

        <button data-modal="formTicket" class="modal-trigger bg-red-500 hover:bg-red-200 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-500 rounded">Agregar Entrada</button>
        <div id="formTicket" class="modal-wrapper">
            <div class="overlay close-modal"></div>
            <div class="modal modal-centered">
                <div class="modal-content shadow-lg p-5">
                    <div class="border-b p-2 pb-3 pt-0 mb-4">
                        <div class="flex justify-between items-center">
                            Agregar Entrada
                        </div>
                    </div>
                    <!-- Modal content -->
                    <form id="form_id" class="w-full">
                        <div class="form-group row">
                            <div class="col-10">
                                <input class="form-control" type="number" placeholder="Precio" id="example-text-input">
                            </div>
                        </div>
                        <label for="example-time-input" class="col-form-label">Promoción</label>
                        <select class="form-select form-control" aria-label="Default select example">
                            <option selected=""></option>
                            @{
                                int i = 1;
                                foreach (var promotion in Model.Promotions)
                                {
                                    i++;
                                    <option value="@i">@promotion</option>
                                }
                            }
                        </select>
                        <label for="example-time-input" class="col-form-label">Función</label>
                        <select class="form-select form-control" aria-label="Default select example">
                            <option selected=""></option>
                            @{
                                int j = 1;
                                foreach (var promotion in Model.Shows)
                                {
                                    j++;
                                    <option value="@j">@promotion</option>
                                }
                            }
                        </select>
                        <label for="example-time-input" class="col-form-label">Usuario</label>
                        <select class="form-select form-control" aria-label="Default select example">
                            <option selected=""></option>
                            @{
                                int k = 1;
                                foreach (var user in Model.Users)
                                {
                                    k++;
                                    <option value="@k">@user</option>
                                }
                            }
                        </select>

                        <div class="mt-5">
                            <button class="bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded"> Crear </button>
                            <span class="close-modal cursor-pointer bg-red-200 hover:bg-red-500 text-red-900 font-bold py-2 px-4 rounded">
                                Cerrar
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>