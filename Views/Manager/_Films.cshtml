@model GenericPaginator<Cine.Models.Movie>   
<div class=" w-full">
    <div class="flex flex-col items-center justify-center">
        <p class="text-2xl text-center font-bold m-5">Películas</p>
        <table class="rounded-t-lg m-5 w-5/6 mx-auto bg-gray-200 text-gray-800">
            <tr class="text-left border-b-2 border-gray-300">
                <th class="px-4 py-3">Título</th>
                <th class="px-4 py-3">Género</th>
                <th class="px-4 py-3">Categoría</th>
                <th class="px-4 py-3">Duración</th>
                <th class="px-4 py-3">Año</th>
                <th class="px-4 py-3">País</th>
                <th class="px-4 py-3">Sinopsis</th>
                <th class="px-4 py-3">Acción</th>
            </tr>
            <tbody>
            @foreach (var item in Model.Result)
            {
                <tr class="bg-gray-100 border-b border-gray-200">
                    <th class="px-4 py-3">@item.Title</th>
                    <th class="px-4 py-3">@item.Genre</th>
                    <th class="px-4 py-3">@item.Category</th>
                    <th class="px-4 py-3">@item.Duration</th>
                    <th class="px-4 py-3">@item.Year</th>
                    <th class="px-4 py-3">@item.Country</th>
                    <th class="px-4 py-3">
                        <button data-modal="@item.MovieId" class="modal-trigger bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Ver
                        </button>
                    </th>
                    <div id="@item.MovieId" class="modal-wrapper">
                        <div class="overlay close-modal"></div>
                        <div class="modal modal-centered">
                            <div class="modal-content shadow-lg p-5">
                                <div class="border-b p-2 pb-3 pt-0 mb-4">
                                    <div class="flex justify-between items-center">
                                        Sinopsis
                                    </div>
                                </div>
                                <p>
                                    @item.Synopsis
                                </p>
                            </div>
                        </div>
                    </div>
                    <th class="px-4 py-3">
                        <div class="inline-flex">
                            <button class="bg-gray-200 hover:bg-green-500 text-black-dark font-bold py-2 px-4 rounded-l">
                                Edit
                            </button>
                            <button class="bg-gray-200 hover:bg-red-500 text-black-dark font-bold py-2 px-4 rounded-r">
                                Elim
                            </button>
                        </div>
                    </th>
                </tr>
            }                                                    
            </tbody>
        </table>
        <button data-modal="formFilm" class="modal-trigger bg-red-500 hover:bg-red-200 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-500 rounded">Agregar Película</button>
        <div id="formFilm" class="modal-wrapper">
            <div class="overlay close-modal"></div>
            <div class="modal modal-centered">
                <div class="modal-content shadow-lg p-5">
                    <div class="border-b p-2 pb-3 pt-0 mb-4">
                        <div class="flex justify-between items-center">
                            Agregar Película
                        </div>
                    </div>
                    <!-- Modal content -->
                    <div class="form-group row">
                        <div class="col-10">
                            <input class="form-control" placeholder="Título" type="text" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10">
                            <input class="form-control" placeholder="Categoría" type="text" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10">
                            <input class="form-control" placeholder="Género" type="text" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10">
                            <input class="form-control" type="text" placeholder="Sinopsis" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10">
                            <input class="form-control" type="text" placeholder="País" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10">
                            <label>Duración</label>
                            <input class="form-control" type="time" placeholder="Duración" id="example-text-input">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-10">
                            <label>Año</label>
                            <input class="form-control" type="number" value="2021" placeholder="Año" id="example-text-input">
                        </div>
                    </div>
                    <form id="form_id" class="w-full">
                        <div class="mt-5">
                            <button class="bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded"> Crear </button>
                            <span class="close-modal cursor-pointer bg-red-200 hover:bg-red-500 text-red-900 font-bold py-2 px-4 rounded">
                                Cerrar
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>