                <li class="mr-3 ">
                    <a class="inline-block text-red-600 no-underline  hover:text-gray-200 hover:text-underline py-2 px-4" asp-controller="Show" asp-action="MainShows">Shows</a>
                </li>
                
                @if (_signInManager.IsSignedIn(User))
                {
                    <li class="mr-3">

                        <a class="inline-block text-red-600 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" asp-controller="TheaterUser" asp-action="Logout">Log out</a>
                    </li>
                    <li class="mr-3">

                        <a class="inline-block text-red-600 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" asp-controller="TheaterUser" asp-action="MainProfile">Profile</a>
                    </li>
                }
                else
                {
                    <li class="mr-3">
                        <a class="inline-block text-red-600 no-underline hover:text-gray-200 hover:text-underline py-2 px-4" asp-controller="TheaterUser" asp-action="Login">Log in</a>
                    </li>
                }

            </ul>
        </div>

    </nav>

    <!--Container-->
