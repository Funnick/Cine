@{
    Layout = "~/Views/Manager/_Layout.cshtml";
}
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Cinema;
<div class=" w-full">
        <div class="flex flex-col items-center justify-center">
            <p class="text-2xl text-center font-bold m-5">Sala</p>
            <table class="rounded-t-lg m-5 w-5/6 mx-auto bg-gray-200 text-gray-800">
                <tr class="text-left border-b-2 border-gray-300">
                <tr>
                    <th class="px-4 py-3">Id</th>
                    <th class="px-4 py-3">Seats</th>
                    <th class="px-4 py-3">Shows</th>
                    <th class="px-4 py-3">Action</th>
                </tr>
                <tbody>
                @{
                    if (ViewBag.CinemasCount != 0)
                    {
                        foreach (var item in ViewBag.Cinemas)
                        {
                            <tr class="bg-gray-100 border-b border-gray-200">
                                <th class="px-4 py-3">@item.CinemaId</th>
                                <th class="px-4 py-3">@item.NumberOfSeats</th>
                                <th class="px-4 py-3">
                                    @{
                                        if (!(item.Shows is null))
                                        {
                                            foreach (var shows in item.Shows)
                                            {
                                                <ul>@shows.StartTime @shows.Date</ul>
                                            }
                                        }
                                    }
                                </th>
                                <th class="px-4 py-3">
                                    <div class="inline-flex">
                                        <button class="bg-gray-200 hover:bg-green-500 text-black-dark font-bold py-2 px-4 rounded-l">
                                            Edit
                                        </button>
                                        <button class="bg-gray-200 hover:bg-red-500 text-black-dark font-bold py-2 px-4 rounded-r">
                                            Del
                                        </button>
                                    </div>
                                </th>
                            </tr>
                        }
                    }
                    else
                    {
                        <th class="px-4 py-3">No elements to show</th>
                    }
                }
                </tbody>
            </table>
            <button data-modal="formCinema" class="modal-trigger bg-red-500 hover:bg-red-200 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-500 rounded">Add Cinema</button>
            <div id="formCinema" class="modal-wrapper">
                <div class="overlay close-modal"></div>
                <div class="modal modal-centered">
                    <div class="modal-content shadow-lg p-5">
                        <div class="border-b p-2 pb-3 pt-0 mb-4">
                            <div class="flex justify-between items-center">
                                Add Cinema
                            </div>
                        </div>
                        <!-- Modal content -->
                        <form method="post" id="form_id" class="w-full" asp-controller="Cinema" asp-action="Create">
                            <div class="form-group row">
                                <div class="col-10">
                                    <input class="form-control" type="number" placeholder="Number of seats" id="example-text-input" asp-for="NumberOfSeats"/>
                                </div>
                            </div>
                            <div class="mt-5">
                                <input type="submit" class="bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded" value="Create"/>
                                <span class="close-modal cursor-pointer bg-red-200 hover:bg-red-500 text-red-900 font-bold py-2 px-4 rounded">
                                    Close
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>